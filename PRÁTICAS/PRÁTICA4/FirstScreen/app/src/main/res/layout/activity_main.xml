<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/Button"
        android:onClick="onClickClassification"
        />

    <TextView
        android:id="@+id/Lanterna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Button"
        android:layout_marginEnd="180dp"
        android:layout_marginTop="20dp"
        android:text="@string/Lanterna"
        />
    <TextView
        android:id="@+id/Vibracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Button"
        android:layout_marginStart="180dp"
        android:layout_marginTop="20dp"
        android:text="@string/Vibracao"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchLanterna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lanterna"
        android:layout_alignStart="@+id/Lanterna"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchProximidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Vibracao"
        android:layout_alignStart="@+id/Vibracao"
        />




</RelativeLayout>